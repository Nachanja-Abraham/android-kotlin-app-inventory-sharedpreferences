<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/green_light2">

    <!-- Fondo del ripple con bordes redondeados -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="5dp" /> <!-- Ajusta el radio para cambiar la redondez -->
        </shape>
    </item>

    <!-- Efecto de la mÃ¡scara ripple -->
    <item android:id="@android:id/mask">
        <shape android:shape="oval">
            <solid android:color="@color/green_light2" />
            <corners android:radius="5dp" /> <!-- Mismo radio para mantener la consistencia -->
        </shape>
    </item>

</ripple>